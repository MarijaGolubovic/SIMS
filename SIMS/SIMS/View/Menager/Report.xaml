<Page x:Class="SIMS.View.Menager.Report"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIMS.View.Menager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Report">

    <Grid>

        <Grid Height="393" Width="375" HorizontalAlignment="Left" Margin="25,0,0,25">
            <Viewbox Stretch="Fill" >
                <Calendar Background="MintCream"  BorderThickness="0"/>
            </Viewbox>
        </Grid>
        <Border BorderBrush="Green" BorderThickness="3" Margin="23,14,23,36">
            <DataGrid Margin="370,0,0,0" Background="MintCream" BorderThickness="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Room" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Reason" Binding="{Binding MedicineStatus}" Width="*"/>
                    <DataGridTextColumn Header="Employer" Binding="{Binding Quantity}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

    </Grid>
</Page>
