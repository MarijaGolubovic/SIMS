<Page x:Class="SIMS.View.Menager.Report"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIMS.View.Menager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Report">

    
    <Grid>
        
        <Grid Height="393" Width="375" HorizontalAlignment="Left" Margin="25,0,0,25">
            <Viewbox Stretch="Fill" >
                <Calendar x:Name="calendar" Background="MintCream"  BorderThickness="0" MouseDoubleClick="calendar_MouseDoubleClick"/>
            </Viewbox>
        </Grid>
        <Border BorderBrush="Green" BorderThickness="3" Margin="23,14,23,36">
            <DataGrid Margin="370,0,0,0"  x:Name="DataGridReport" Background="MintCream" BorderThickness="0" ItemsSource="{Binding ReportData}" AutoGenerateColumns="False" IsReadOnly="True" Visibility="Visible">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Room" Binding="{Binding RoomId}" Width="*"/>
                    <DataGridTextColumn Header="Reason" Binding="{Binding Reason}" Width="*"/>
                    <DataGridTextColumn Header="Employer" Binding="{Binding Employer}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
