<Window x:Class="SIMS.Menager.MainWindowMenager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS.Menager"
        mc:Ignorable="d"
        Title="Hello Clinic" Height="450" Width="800">
    <Grid>
        <Grid Height="90" VerticalAlignment="Top">
            <Border BorderThickness="1" BorderBrush="Black" Background="LightGray"/>
            <Button Width="80" Height="25"  HorizontalAlignment="Left"  Name="AddRoom" Content="Add room" Background="White" Click="AddRoom_Click" RenderTransformOrigin="1.531,0.587"  />
            <Button Height="25" Width="80"  Name="UpdateRoom" HorizontalAlignment="Center" Content="Update room" Background="White" Click="UpdateRoom_Click" RenderTransformOrigin="0.548,-0.398"  />
            <Button Height="25" Width="80" Name="DeleteRoom" Content="Delete room" HorizontalAlignment="Right" Background="White" RenderTransformOrigin="1.259,0.607" Click="DeleteRoom_Click"  />
        </Grid>
    </Grid>
</Window>
